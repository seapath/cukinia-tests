passwd=" \
    root \
    daemon \
    bin \
    sys \
    sync \
    games \
    man \
    lp \
    mail \
    news \
    uucp \
    proxy \
    www-data \
    backup \
    list \
    irc \
    gnats \
    nobody \
    _apt \
    systemd-network \
    systemd-resolve \
    ceph \
    hacluster \
    messagebus \
    systemd-timesync \
    uuidd \
    sshd \
    Debian-snmp \
    libvirt-qemu \
    systemd-coredump \
    ansible \
    _chrony \
    {{ admin_user }} \
    {{ livemigration_user }} \
    libvirt \
"
args="-v"
for g in ${passwd}; do
    args="$args -e $g"
done

cukinia_log "$(_colorize yellow "--- check /etc/passwd ---")"
nb_passwd=$(echo $passwd | wc -w)
as "SEAPATH-00047 - /etc/passwd is consistent" cukinia_test $(grep $args /etc/passwd | wc -l) -eq 0
as "SEAPATH-00048 - /etc/passwd does not include extra user" cukinia_test $(cat /etc/passwd | wc -l) -eq $nb_passwd
